li: .row
  .large-4.columns
    .row.hash
      .key Name
      .value = test.name

  .large-3.columns
    .row.hash
      .key Sections count
      .value = test.sections.length

  .large-3.columns
    .row.hash
      .key Questions count
      .value = show_questions_in_test(test)

  .large-2.columns
    .button-group.small.float-right
      = link_to 'Edit', edit_test_path(test), class: 'button'
      = link_to 'Delete', test, method: :delete, class: 'button alert', data: { confirm: 'Are you sure?' }
